.column_main_block
	position relative
	.main_inner
		padding-top 55px!important
		padding-left 0px!important
		padding-right 0px!important
		.study_video
			position relative
			padding-bottom 56.25% /* 16:9 */
			padding-top 0px
			height 0
			.video
				position absolute
				top 0
				left 0
				width 100%
				height 100%
		.study_block
			padding-left 40px
			padding-right 40px
			.study_title
				font 18pt/20pt 'Georgia'
				margin-top 20px
				margin-bottom 10px
			.study_description
				margin-top 20px
			.study_body
				position relative
				&.video
					.study_counters
						margin 0
						position absolute
						bottom 4px
						left 750px
					.study_links
						position absolute
						left 750px
						.link
							margin-bottom 15px
							&.pdf
								width 40px
								height 48px

.study_counters
	float right
	margin-top 11px
.study_links
	float left
	.link
		cursor pointer
		display block
		background-size cover
		background-repeat no-repeat
		&.pdf
			width 30px
			height 35px
			background-image url('/images/design/icons/pdf.svg')
		.tooltip
			display none
			color grey
			background-color lightgrey
			padding 3px 5px 3px 5px
		&:hover
			.tooltip
				display block
				position fixed
				overflow hidden