.plane_block
		position absolute
		cursor pointer
		top 502px
		left 645px
		&:hover
			.plane_text
				color #EF3925
			.plane
				transform scale(2.3)
	.plane_text
		float left
		margin-top 30px
		margin-right 15px
		font 16pt/18pt 'GillSans'
