// -- Title block

.content_title_block
	width 970px
	// background-color rgb(101, 208, 40)
	overflow hidden
	a
		color grey
		font 24pt/26pt 'GillSansLight'
		float left
		margin-right 30px
		display block
		text-decoration none
		&:hover
		&.current
			color #EF3925

// -- Boby block

.content_body_block
	margin-top 50px
	overflow hidden
	clear both
	.column_left_block
		width 220px
		min-height 100px
		// background-color rgb(235, 190, 85)
		float left
		a
			display block
			color rgb(147, 149, 152)
			text-decoration none
			font 14pt/16pt 'GillSans'
			margin-bottom 15px
			&:hover
			&.current
				color #EF3925
	.column_main_block
		width 720px
		margin-left 30px
		// min-height 500px
		// background-color rgb(150, 135, 136)
		float left

// -- Item block

.content_item_block
	padding-bottom 25px
	text-decoration none
	display block
	overflow hidden
	&:hover
		.item_title_block
			color #EF3925
	.item_body
		color black
		text-decoration none
		.item_title_block
			font 18pt/20pt 'Georgia'
			margin-bottom 10px
			overflow hidden
			.item_num
				float left
				&:after
					content '-'
					margin 0 10px 0 10px
			.item_title
				float left
	.item_links
		margin-top 10px
		overflow hidden
		float left
		.link
			float left
			margin-right 15px
			cursor pointer
			display block
			background-size cover
			background-repeat no-repeat
			&.video
				width 35px
				height 35px
				background-image url('/images/design/icons/play.svg')
			&.pdf
				width 30px
				height 35px
				background-image url('/images/design/icons/pdf.svg')
			.tooltip
				display none
				color grey
				background-color lightgrey
				padding 3px 5px 3px 5px
			&:hover
				.tooltip
					display block
					position fixed
					overflow hidden
	.item_counters
		padding-top 21px
		display block
		float right