.search_input::-webkit-input-placeholder {color: white;}
.search_input::-moz-placeholder          {color: white;}/* Firefox 19+ */
.search_input:-moz-placeholder           {color: white;}/* Firefox 18- */
.search_input:-ms-input-placeholder      {color: white;}

body
	margin 0
	padding 0
	font 14pt/18pt 'Georgia'
	// &.stop_scroll
	// 	height 100%
	// 	overflow hidden

h1, h2, h3
	margin 0
	padding 0

h2
	font 16pt/18pt 'Georgia'

h3
	font 14pt/16pt 'Georgia'

a
	text-decoration none
	color grey
	transition color .2s ease-in-out
	&:hover
		transition color .2s ease-in-out
		color #c33825

.menu_block
	position fixed
	top 0
	z-index 99999
	padding-top 10px
	padding-bottom 5px
	background-color rgba(13, 13, 13, 0.8)
	color white
	width 100%
	.menu_inner
		max-width 1200px
		padding-left 40px
		padding-right 40px
		margin 0 auto
	.logo
		font 24pt/26pt 'Georgia'
		cursor pointer
		float left
		transition color .2s ease-in-out
		&:hover
			transition color .2s ease-in-out
			color #c33825
		&.hide
			display none
	.menu_search
		display block
		float left
		display none
		&.active
			display block
		.search_input
			font 24pt/26pt 'Georgia'
			margin 0
			padding 0
			border none
			outline none
			color white
			background transparent
			min-width 100px
			max-width 210px
	.menu_right
		float right
		margin-top 4px
		a
			margin-left 10px
			img
				height 30px
	.menu_themes
		padding-top 5px
		clear both
		display none
		padding-bottom 5px
		&.active
			display block

.preview_block
	width 100%
	height 100%
	position fixed
	background-color rgba(0, 0, 0, 0.9);
	z-index 999
	display none
	.preview_video
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		position fixed