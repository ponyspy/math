.search_input::-webkit-input-placeholder {color: rgb(147, 149, 152);}
.search_input::-moz-placeholder          {color: rgb(147, 149, 152);}/* Firefox 19+ */
.search_input:-moz-placeholder           {color: rgb(147, 149, 152);}/* Firefox 18- */
.search_input:-ms-input-placeholder      {color: rgb(147, 149, 152);}

body
	margin 0
	padding 0
	font 14pt/18pt 'Georgia'
	&.stop_scroll
		height 100%
		overflow hidden

h1, h2, h3
	margin 0
	padding 0

h2
	font 16pt/18pt 'Georgia'

h3
	font 14pt/16pt 'Georgia'

a
	text-decoration none
	color grey
	transition color .2s ease-in-out
	&:hover
		transition color .2s ease-in-out
		color #c33825

.menu_block
	position fixed
	top 0
	z-index 99999
	padding-top 6px
	padding-bottom 6px
	background-color rgba(13, 13, 13, 0.8)
	color white
	width 100%
	.menu_inner
		max-width 1200px
		padding-left 40px
		padding-right 40px
		margin 0 auto
	.logo
		font 24pt/26pt 'Georgia'
		// padding-bottom 2px
		cursor pointer
		float left
		transition color .2s ease-in-out
		&:hover
			transition color .2s ease-in-out
			color #c33825
		&.hide
			display none
	.menu_search
		display block
		float left
		display none
		&.active
			display block
		.search_input
			font 24pt/26pt 'Georgia'
			margin 0
			padding 0
			border none
			outline none
			color white
			background transparent
			min-width 100px
			max-width 210px
	.menu_right
	.right_drop
		float right
		margin-top 6px
		a
			margin-left 10px
			width 26px
			height 26px
			display inline-block
			background-repeat no-repeat
			background-position 50% 50%
			background-size 65%
			&.search
				background-image url('/images/design/icons/search3.svg')
			&.share
				background-image url('/images/design/social/share.svg')
				display none
				background-size 60%
			&.mail
				background-image url('/images/design/social/email.svg')
			&.vk
				background-image url('/images/design/social/vk.svg')
				background-size 85%
			&.fb
				background-image url('/images/design/social/fb.svg')
				background-size 85%
	.menu_themes
		padding-top 5px
		clear both
		display none
		padding-bottom 5px
		&.active
			display block

.search_results
	display none
	position absolute
	width 100%
	height 100%
	overflow scroll
	z-index 99
	background-color rgba(13, 13, 13, 0.9)
	-webkit-overflow-scrolling touch
	.search_inner
		padding-top 75px
		padding-left 40px
		padding-right 40px
		max-width 1200px
		margin 0 auto
	.search_items
		.search_item
			.item_title
			.item_description
				color white!important
			&:hover .item_title
				color #c33825!important
	.search_nav
		display none
		width 100%
		padding-top 15px
		padding-bottom 15px
		background-color rgba(13, 13, 13, 0.9)
		color white
		overflow hidden
		position fixed
		left 0
		bottom 0
		.nav_inner
			max-width 1200px
			margin 0 auto
			padding-left 40px
			padding-right 40px
			.categorys_block
				float left
			.nav_item
				margin-right 25px
				float left
				cursor pointer
				color rgb(147, 149, 152)
				font 14pt/16pt 'GillSans'
				transition color .2s ease-in-out
				&:hover
				&.current
					transition color .2s ease-in-out
					color #c33825
	.search_title
		font-size 18pt
		color white

.preview_block
	width 100%
	height 100%
	position fixed
	background-color rgba(0, 0, 0, 0.9);
	z-index 999
	display none
	.preview_inner
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		position absolute
		width 60%
		height 60%
		&:hover .preview_pdf
			opacity 1
		.preview_pdf
			overflow hidden
			opacity 0
			padding-top 10px
			&:hover
				opacity 1
		.preview_video
			position relative
			padding-bottom 56.25% /* 16:9 */
			padding-top 0px
			height 0
			.video
				position absolute
				top 0
				left 0
				width 100%
				height 100%

.panel_open
	width 60px
	height 60px
	border-radius 120px
	background-color #c33825
	position fixed
	bottom 40px
	right 20px
	z-index 999999999
	display none
	background-image url('/images/design/icons/menu.svg')
	background-position center
	background-size 80%
	background-repeat no-repeat
	transition .3s linear
	&.active
		background-color black
		transition .3s linear
		transform rotate(90deg)