.content_photo
	top 0
	position fixed
	width 100%
	overflow hidden
	.photo_inner
		z-index 999
		cursor pointer
		position relative
		max-width 1200px
		height 630px
		margin 0 auto
		overflow hidden
		.photo
			z-index 0
			position relative
			max-width 1200px
			height 630px
			background-image url('/images/design/backgrounds/iam.jpg')
			background-position top
			background-size cover
			background-repeat no-repeat
		.photo_desc
			font 13pt/14pt 'GillSans'
			position absolute
			max-width 1200px
			padding-top 17px
			padding-bottom 15px
			padding-left 40px
			padding-right 38.7px
			background-color rgba(13, 13, 13, 0.8)
			color #939598
			bottom 0
.content_body
	max-width 1200px
	padding-left 40px
	padding-right 40px
	padding-bottom 40px
	margin 0 auto
	position relative
	top 630px
	background-color white
	.content_item
		// min-height 200px
		padding-top 40px
		.item_title
			font 24pt/26pt 'Georgia'
			margin-bottom 40px
		.item_desc
			hyphens auto
			ul
				list-style-type none
				padding 0
				// padding-left 20px
				li
					&:before
						content 'â€”'
						padding-right 6px
			.section
				width 50%
				position relative
				box-sizing border-box
				// background-color #c33825
				&.left
					left 0
					padding-right 20px
				&.right
					left 50%
					padding-left 20px
			&.active
				display block
			img
				width 100%
				display block
				padding-top 40px
				padding-bottom 40px

.books_separator
	font 16pt/18pt 'Georgia'
	margin-bottom 20px
	margin-top 20px

.book_item
	-webkit-hyphens: none;
	margin-bottom 10px
	display block
	color black
	text-decoration none
	transition color .2s ease-in-out
	&:hover
		transition color .2s ease-in-out
		color #c33825
	.book_pref
		margin-right 10px
	.book_name
		font 14pt/22pt 'Georgia'
		margin-right 5px
	.book_post
		font-style italic
		display inline-block