mixin contentItem(num, title, description)
	.content_item_block(class=attributes.type)
		a.item_body(href=attributes.href)
			.item_title_block
				.item_num= num
				.item_title= title
			.item_description!= description
		.item_links
			.link.video(video_id=attributes.video)
			each file in new Array(3)
				.link.pdf(file_path='file.path')
					.tooltip лалалала
		.item_counters
			.social-likes.social-likes_horizontal.social-likes_light(data-url='http://' + host + attributes.href, data-title=title)
				.facebook(title='Поделиться ссылкой на Фейсбуке') Facebook
				.vkontakte(title='Поделиться ссылкой во Вконтакте') Вконтакте

mixin contentStudy(study)
	.study_block
		.study_title= study.title
		.study_description!= study.description
		.study_video
			.study_links
				each file in study.files
					.link.pdf(file_path=file.path)
			.study_counters
				.social-likes.social-likes_vertical.social-likes_light(data-title=study.title)
					.facebook(title='Поделиться ссылкой на Фейсбуке') Facebook
					.vkontakte(title='Поделиться ссылкой во Вконтакте') Вконтакте
			iframe(width='720', height='400', src='https://www.youtube.com/embed/' + study.video, frameborder='0', allowfullscreen='')