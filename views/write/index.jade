extends ../layout

block title
	title= 'Школа Опойцева — Написать'
	- var menu_current = 4

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/write.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/js/write.js' + version)

block content
	form.form_block(action="/write", method="post", enctype="multipart/form-data")
		.form_inner
			input.form_email(type='text', name='email', placeholder='Ваш e-mail')
			input.form_theme(type='text', name='theme', placeholder='Тема')
			.form_description
				.description_input(placeholder='Что хотите написать?', contenteditable=true)
				textarea.description_form(name='description')
		.panel_block: .panel_inner
			.form_file
				input.file(type='file', name='attach')
			.form_submit