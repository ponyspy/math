extends ../../layout

block title
	title ДОБАВИТЬ ПОЛЬЗОВАТЕЛЯ

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/add.js')

block content
	.form_block
		a.back_link(href='/auth/users') < Назад
		.title ДОБАВИТЬ ПОЛЬЗОВАТЕЛЯ
		br
		form(action="/auth/users/add", method="post")
			.form_title ЛОГИН:
			input(type='text', name='login')
			.form_title E-MAIL:
			input(type='text', name='email')
			.form_title ПАРОЛЬ:
			input(type='password', name='password')
			.form_title РОЛЬ:
			select(name='status')
				option(value='User') Пользователь
				option(value='Admin') Администратор
			br
			br
			input(type='submit', value='отправить')