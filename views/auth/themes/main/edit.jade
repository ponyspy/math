extends ../../../layout
include ../../forms.jade

block title
	title РЕДАКТИРОВАТЬ ТЕМУ

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/add.js')

block content
	.form_block
		a.back_link(href='/auth/themes') < Назад
		.title РЕДАКТИРОВАТЬ ТЕМУ
		form(action="", method="post")
			.form_title Заголовок:
			input.form_text(type='text', name='title', value=theme.title)
			.form_title Синоним:
			input(type='text', name='sym', placeholder='обязательно', value=theme.sym)
			.form_title Нумерация подтем:
			| отступ:
			select(name='numbering[offset]')
				each option,i in new Array(10)
					option(value=i, selected=(i == theme.numbering.offset))= i
			!= ' | '
			| начинать с:
			select(name='numbering[start]')
				each option,i in new Array(10)
					option(value=i, selected=(i == theme.numbering.start))= i
			.form_title Дата публикации:
			+form_calendar('date', theme.date)
			br
			br
			input(type='submit', value='отправить')