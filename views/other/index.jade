extends ../layout

block title
	title= 'Школа Опойцева / Разное'
	- var menu_current = 3

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/other.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/js/other.js' + version)

block content
	.content_body_block
		.column_left_block
			a.current(href='#') все
			each category in categorys
				a(href='/other/' + category._short_id)= category.title
		.column_main_block
			each study, i in studys
				+contentItem(sub_num + '.' + i, study.title, study.description)(href='/other/' + study._short_id, video=study.video, files=study.files)